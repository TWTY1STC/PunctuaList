
<% @user.items.each do |item| %>
  <h4><%= item.name %></h4>
    <%= f.label :completed, class: 'checkbox' do %>
      <%= f.check_box :completed %> Task completed
    <% end %>
    <small>
        created <%= time_ago_in_words(item.created_at) %> ago 
    </small>
<% end %>

  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "Add new item", new_item_path(@user), class: 'btn btn-success' %>
    </div>
  <% end %>
    