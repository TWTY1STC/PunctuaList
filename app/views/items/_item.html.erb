<tr id="item-<%= item.id %>">
  <td>
    <%= item.name %>
  </td>
  <td>
    <%= distance_of_time_in_words(item.created_at, Time.now) + " ago" %>
  </td>
  <td>
    <%= distance_of_time_in_words((item.created_at + 7.days) - (Time.now)) %>
  </td>
  <td>
    <%= link_to "", user_item_path(current_user, item.id), remote: true, method: :delete, class: 'glyphicon glyphicon-ok' %>
  </td>
</tr>
